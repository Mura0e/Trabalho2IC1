#include <stdio.h>
#include <stdlib.h>

int main(){
    int n, i;
    printf("Quantos numeros vocÃª quer digitar? ");
    scanf("%d", &n);
    int *p=(int *)malloc(n*sizeof(int));
    if(p == NULL){
        printf("Erro ao alocar memoria");
        return 1;
    }
    for(i=0; i<n; i++){
        printf("\nDigite o %d numero: ", i+1);
        scanf("%d", &p[i]);
    }
    printf("\033[H\033[J");
    printf("Os numeros digitados foram:\n");
    for(i=0; i<n; i++){
        printf("%d\n", p[i]);
    }
    free(p);
     return 0;
}
